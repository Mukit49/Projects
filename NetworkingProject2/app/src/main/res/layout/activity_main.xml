<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f5f2f0"

    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connection Status"
        android:textSize="20dp"
        android:textColor="#cc1919"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/connection_statusid"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connection_statusid"
        >







    <Button
        android:id="@+id/wifi_on_btn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Wifi On"
        android:textColor="#f5eeee"
        android:textSize="15dp"

        android:layout_marginLeft="20dp"
        android:background="@drawable/custom_button"
        android:layout_marginBottom="5dp"




        />



    <Button
        android:id="@+id/discover_btn_id"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Discover"
        android:textColor="#f5eeee"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="5dp"

        android:background="@drawable/custom_button"


        />

    </LinearLayout>




<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connected Devices"
            android:textStyle="bold"
            android:textColor="#ff22"
            android:layout_marginTop="2dp"
            android:textSize="20dp"
            android:layout_marginLeft="110dp"


            />







    
    <ListView
        android:id="@+id/list_view_id"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/discover_btn_id"
        android:layout_marginTop="5dp"
        android:background="#153ad7"


        >




    </ListView>

    </LinearLayout>



</ScrollView>






    <TextView
        android:id="@+id/message_text_id"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="Message"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#f5efef"

        android:layout_below="@+id/list_view_id"
        android:layout_marginTop="15dp"
        android:background="#310909"
        android:layout_marginBottom="5dp"


        />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <EditText
        android:id="@+id/message_edit_text_id"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textSize="15dp"


        android:layout_below="@+id/message_text_id"
        android:textColor="#c12c2c"








        />



        <Button
            android:id="@+id/send_btn_id"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/message_edit_text_id"
            android:text="SEND"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="#f5eeee"
            android:layout_below="@+id/message_text_id"
            android:background="@drawable/custom_button"



            />










    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        >


    <Button
        android:id="@+id/save_conversation_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Save Conversation"
        android:textSize="10dp"
        android:onClick="onSaveClicked"
        android:textStyle="bold"
        android:textColor="#f5eeee"
        android:layout_below="@id/message_edit_text_id"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="10dp"




        />



    <Button
        android:id="@+id/share_file_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Share File"
        android:textSize="10dp"
        android:textStyle="bold"
        android:onClick="onSendTextFileClicked"
        android:textColor="#f5eeee"
        android:layout_below="@+id/change_background_id"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="10dp"





        />

    <Button
        android:id="@+id/change_background_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Change Background"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#f5eeee"
        android:layout_below="@+id/save_conversation_id"
        android:layout_marginTop="5dp"
        android:background="@drawable/custom_button"
        android:layout_marginLeft="10dp"





        />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        >


        <Button
            android:id="@+id/red_color_id"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Red"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#f7f2f2"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="10dp"






            />


        <Button
            android:id="@+id/blue_color_id"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Blue"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#f5eeee"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="10dp"





            />

        <Button
            android:id="@+id/yellow_color_id"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Yellow"
            android:textSize="10dp"
            android:textStyle="bold"
            android:textColor="#f5eeee"
            android:background="@drawable/custom_button"
            android:layout_marginLeft="10dp"





            />

    </LinearLayout>









    










</LinearLayout>