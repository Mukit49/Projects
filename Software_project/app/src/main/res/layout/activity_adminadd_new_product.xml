<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminaddNewProductActivity">
    
    
    <ImageView
        android:id="@+id/select_product_image_id"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        android:src="@drawable/select_product_image"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"





        />

    <EditText
        android:id="@+id/product_name_id"
        android:layout_below="@id/select_product_image_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:inputType="textImeMultiLine"
        android:hint="product name"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom_edit_text"
        android:padding="20dp"
        android:textStyle="bold"



        />


    <EditText
        android:id="@+id/product_description_id"
        android:layout_below="@id/product_name_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:inputType="textImeMultiLine"
        android:hint="product description"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom_edit_text"
        android:padding="20dp"


        />


    <EditText
        android:id="@+id/product_price_id"
        android:layout_below="@id/product_description_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:inputType="textImeMultiLine"
        android:hint="product price"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:background="@drawable/custom_edit_text"
        android:padding="20dp"




        />

    <Button
        android:id="@+id/addnewproduct_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/product_price_id"
        android:text="ADD PRODUCT"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginRight="45dp"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="10dp"
        android:padding="17dp"
        android:textColor="#f5f2f2"
        android:background="@drawable/custom_button"








        />

</RelativeLayout>