<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmFinalOrderActivity">

    <TextView
        android:id="@+id/final_order_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Shipment Details"
        android:textSize="22dp"
        android:textColor="#282525"
        android:layout_margin="25dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"





        />

    <EditText
        android:id="@+id/order_name_txt_id"
        android:layout_below="@id/final_order_txt"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:hint="Your Name"
        android:background="@drawable/custom_edit_text"

        />
    <EditText
        android:id="@+id/order_phone_txt_id"
        android:layout_below="@id/order_name_txt_id"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="15dp"
        android:hint="Your Phone number"
        android:inputType="number"

        android:background="@drawable/custom_edit_text"


        />
    <EditText
        android:id="@+id/order_homeaddress_txt_id"
        android:layout_below="@id/order_phone_txt_id"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your home address"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custom_edit_text"


        />

    <EditText
        android:id="@+id/order_city_txt_id"
        android:layout_below="@id/order_homeaddress_txt_id"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:hint="Your city"
        android:layout_marginBottom="15dp"
        android:background="@drawable/custom_edit_text"


        />

    <Button
        android:id="@+id/confirm_order_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="20dp"
        android:text="Confirm"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#f4f2f2"
        android:background="#461111"

        />




</RelativeLayout>