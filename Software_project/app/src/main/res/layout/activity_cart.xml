<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CartActivity">

    <RelativeLayout
        android:id="@+id/realative_layout1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#411311"

        >

        <TextView
            android:id="@+id/total_price_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Price= "
            android:textColor="#f7f1f1"
            android:textSize="20dp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"

            />







    </RelativeLayout>


    <TextView
        android:id="@+id/msg1_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1b1717"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:text="Congratulations,Your order placed successfully.Soon you will receive your order"
        android:textSize="20dp"
        android:visibility="gone"








        />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/realative_layout1"
        android:id="@+id/cart_list_id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/next_process_btn_id"




        >




    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/next_process_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#411311"
        android:text="Next"
        android:textColor="#f1f5f1"

        android:textSize="20dp"
        android:textStyle="bold"





        />

</RelativeLayout>