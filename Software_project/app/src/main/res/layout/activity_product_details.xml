<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailsActivity">

    <ImageView
        android:id="@+id/product_image_details_id"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        
        />
    
    <TextView
        android:id="@+id/product_name_details_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_image_details_id"
        android:text="Product Name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#181717"
        android:gravity="center"
        android:layout_marginTop="10dp"





        />

    <TextView
        android:id="@+id/product_description_details_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name_details_id"
        android:text="Product description"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#181717"
        android:gravity="center"
        android:layout_marginTop="10dp"





        />

    <TextView
        android:id="@+id/product_price_details_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_description_details_id"
        android:text="Product price"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#181717"
        android:gravity="center"
        android:layout_marginTop="10dp"

        />
    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_product_btn_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:textSize="12dp"
        app:initialNumber="1"
        app:finalNumber="10"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/product_price_details_id"
        android:layout_marginTop="10dp"

        >

    </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

