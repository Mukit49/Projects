<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    tools:context=".AdminCategoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slogan_category"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#22ff2d"

        


        />

    <LinearLayout
        android:id="@+id/category_layout_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"     t

        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/t_shirt_id"

            android:layout_width="115dp"
            android:layout_height="80dp"
            android:background="#ff22"
            android:src="@drawable/tshirts"

            />

        <ImageView
            android:id="@+id/sports_t_id"

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="#38ff22"
            android:src="@drawable/sports"


            />


        <ImageView

            android:id="@+id/female_dress_id"

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="#11eccf"
            android:src="@drawable/female_dresses"


            />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/category_layout_id2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="210dp"


        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mobile_id"

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="#ffe922"
            android:src="@drawable/mobiles"


            />

        <ImageView

            android:id="@+id/watch_id"

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="#2229ff"
            android:src="@drawable/watches"


            />


        <ImageView

            android:id="@+id/headphones_id"

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:background="#22fff8"
            android:src="@drawable/headphoness"


            />


    </LinearLayout>


    <LinearLayout
        android:layout_below="@+id/category_layout_id2"
        android:id="@+id/category_layout_id3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="30dp"





        >

        <ImageView
            android:id="@+id/sunglass_id"

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/glasses"




            />

        <ImageView

            android:id="@+id/shoee_id"

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/shoess"





            />


        <ImageView
            android:id="@+id/pursebag_id"

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/purses_bags"




            />




    </LinearLayout>



        <ImageView
            android:layout_below="@+id/category_layout_id3"
            android:id="@+id/book_id"

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/books"
            android:layout_marginTop="30dp"




            />




        <ImageView
            android:layout_below="@id/category_layout_id3"

            android:id="@+id/laptop_id"

            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/laptops"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"




            />

    <Button
        android:id="@+id/check_orders_btn_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/admin_logout_btn_id"
        android:background="@drawable/custom_button"
        android:text="Check Orders"
        android:textSize="20dp"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"



        />

    <Button
        android:id="@+id/admin_logout_btn_id"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/custom_button"
        android:text="Admin Logout"
        android:textSize="20dp"
        android:textColor="#f9f4f4"
        android:textStyle="bold"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"



        />












</RelativeLayout>

