<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    app:cardElevation="15dp"


    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <TextView
            android:id="@+id/user_product_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#dc13b4"
            android:textAlignment="center"


            />
        <ImageView
            android:id="@+id/user_product_image_id"
            android:layout_below="@+id/user_product_name_id"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"

            />

        <TextView
            android:id="@+id/user_product_description_id"
            android:layout_below="@id/user_product_image_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Description"

            android:textSize="16dp"
            android:textColor="#dc13b4"
            android:textAlignment="center"


            />

        <TextView
            android:id="@+id/user_product_price_id"
            android:layout_below="@id/user_product_description_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product price"

            android:textSize="16dp"
            android:textColor="#dc13b4"
            android:textAlignment="center"
            android:layout_marginTop="2dp"


            />







    </RelativeLayout>



</android.support.v7.widget.CardView>